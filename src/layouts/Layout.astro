---
import "@fontsource-variable/nunito";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
	title: string;
	descriptcion: string;
}

const { title, descriptcion } = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={descriptcion} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="./favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="dark:text-white relative text-black">
		<div
			class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-neutral-100 dark:bg-neutral-950
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
      dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
		>
		</div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark light;
	}
	body {
		font-family: "Nunito Variable", sans-serif;
	}
</style>
